generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id             Int                     @id @default(autoincrement())
  name           String
  currentPrice   Float
  currencyType   String
  inStock        Boolean
  created        DateTime
  updated        DateTime
  ProductHistory ProductPricingHistory[]
  ProductScraper ProductScraper?
}

model ProductPricingHistory {
  id           Int      @id @default(autoincrement())
  price        Float
  inStock      Boolean
  currencyType String
  created      DateTime
  productId    Int
  product      Product  @relation(fields: [productId], references: [id])
}

model ProductScraper {
  id               Int     @id @default(autoincrement())
  URL              String
  InStockString    String
  OutOfStockString String
  PriceXPATH       String
  productId        Int     @unique
  product          Product @relation(fields: [productId], references: [id])
}
